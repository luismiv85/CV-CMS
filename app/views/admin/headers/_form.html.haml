

= simple_nested_form_for(@admin_header) do |f| 
  = f.error_notification

  .row
    .col-lg-12
      #legend
        %legend Datos básicos
      .form-group
        - if @admin_header.avatar.present?
          = image_tag @admin_header.avatar.url(:medium)
        = f.input :avatar, input_html: { class: "form-control" }
      .form-group
        = f.input :name, input_html: { class: "form-control" }
    .col-lg-12  
      #legend
        %legend Redes sociales
      .form-group
        = f.input :facebook, input_html: { class: "form-control" }
      .form-group
        = f.input :twitter, input_html: { class: "form-control" }
      .form-group
        = f.input :linkedin , input_html: { class: "form-control" }
      .form-group
        = f.input :google , input_html: { class: "form-control" }
    .col-lg-12
      #legend
        %legend Slider texto
      .row
        .col-xs-offset-1.col-xs-7
          Habilidad
        .col-sm-2
          Icono
      = f.fields_for :skills do |skill_form|
        .form-group
          .col-xs-12.margin-bottom-15
            .col-xs-8
              = skill_form.text_field :skill , class: "form-control col-xs-4" 
            .col-xs-2
              = skill_form.text_field :icon, class: "form-control col-xs-2" 
            .col-xs-2
              = skill_form.link_to_remove "Borrar", class: "btn btn-xs btn-danger"
      .form-group
        = f.link_to_add "Añadir habilidad", :skills, class: "btn btn-xs btn-primary btn-add"

  .row
    .form-group.text-center.margin-bottom-50
      = f.button :submit, class: "btn btn-primary", :value => "Actualizar Cabecera"

